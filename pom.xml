      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <!-- local dependencies -->
    <dependency>
        <groupId>com.nuevatel</groupId>
        <artifactId>common-cache</artifactId>
      </dependency>
