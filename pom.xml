        <version>${junit.version}</version>
        <scope>test</scope>
      </dependency>
      <!-- local dependencies -->
      <dependency>
        <groupId>com.nuevatel</groupId>
        <artifactId>common-cache</artifactId>
        <version>${common.version}</version>
      </dependency>
      <dependency>
        <groupId>com.nuevatel</groupId>
        <artifactId>common-core</artifactId>
        <version>${common.version}</version>
      </dependency>
      <dependency>
        <groupId>com.nuevatel.common</groupId>
        <artifactId>appconn</artifactId>
        <version>2.0-MC</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>com.nuevatel.common</groupId>
        <artifactId>wsconn</artifactId>
        <version>2.0-MC</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>com.nuevatel.mc</groupId>
        <artifactId>mc.common</artifactId>
        <version>2.0-MC</version>
        <scope>provided</scope>
      </dependency>
      <!-- buildNumber dependency -->
      <dependency>
        <groupId>com.internetitem</groupId>
        <artifactId>write-properties-file-maven-plugin</artifactId>
        <version>1.0.1</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

